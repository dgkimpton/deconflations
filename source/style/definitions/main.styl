* {
	margin: 0;
	padding: 0;
}

html {
	font-family: "Play", sans-serif;
	font-weight:$font-weight;
}


body {
	display: grid;
	background-color: $body-background;
	color: $body-foreground;
}

a {
	color: $link-foreground;
	text-decoration: underline;
	text-decoration-color: $link-underline;
}

a:visited {
	color: $link-visited-foreground;
	text-decoration-color: $link-visited-underline;
}

a:hover {
	color: $link-hover-foreground;
	background-color: $link-hover-background;
}

.offsite {
	padding-right: 14px;
}

header {
	margin-top: 0.5em;
	margin-bottom: 2em;
}

.branding {
	justify-self: center;
}

.branding h1 {
	font-weight: bold;
	font-size: 3em;
}

.branding h1 a {
	text-decoration: none;
	background-color: $body-background;
	color: $logo-foreground;
}

.branding h1 a:visited {
	color: $logo-foreground;
	background-color: $body-background;
}

.branding h1 a:hover {
	color: $logo-foreground;
	background-color: $body-background;
}

.branding h2 {
	font-weight: lighter;
	font-size: 1em;
	/* prevent auto-sizing on android */
	height: 1em;
	margin-left: 0.25em;
}

.tabs {
	display: flex;
	align-items: flex-start;
	justify-self: center;
	white-space: nowrap;
	margin-bottom: 2em;
}

.tab-separator {
	display: none;
}

.tab {
	text-decoration: none;
	color: $tab-foreground;
	background-color: $tab-background;
	padding-right: 1em;
	padding-left: 1em;
	padding-top: 0.1em;
	margin-right: 2em;
	border-bottom: 1px solid $tab-underline;
}

.tab:first-child {
	margin-left: 0;
}

.tab:last-child {
	margin-right: 0;
}

.current-tab {
	border-bottom: 0.35em solid $tab-underline;
	font-weight: bold;
	color: $tab-current-foreground;
	background-color: $tab-current-background;
}

.tab:visited {
	color: $tab-foreground;
	background-color: $tab-background;
}

.current-tab:visited {
	color: $tab-current-foreground;
	background-color: $tab-current-background;
}

.tab:hover {
	color: $tab-hover-foreground;
	background-color: $tab-hover-background;
}

.post>summary small {
	display: none;
}

.post>summary h2 {
	display: inline;
}

main {
	justify-self: center;
	max-width: 40em;
	width: 90%;
	color: $body-foreground;
}

.page-title {
	display: inline-block;
	font-size: 1.25em;
	padding-top: 0.1em;
	border-bottom: 0.24em solid $tab-underline;
	font-weight: bold;
	width: auto;
	text-align: center;
	justify-self: center;
	color: $tab-foreground;
	padding-right: 1em;
	padding-left: 1em;
	margin-bottom: 1.5em;
}

.posts {
	margin-top: 1em;
	margin-bottom: 1em;
	border-radius: 1em;
	padding: 7px;
}

main h2 {
	margin-top: 1em;
	margin-bottom: 0.5em;
}

.post-container {
	list-style: none;
}

.post {
	background: $body-background;
	padding: 0.5em;
	border-radius: 0.5em;
	box-shadow: inset 0px 0px 3px 2px $post-border;
	position:relative;
}
.post-content {
	overflow: auto;
}

.post+.post {
	margin-top: 10px;
}

.post>summary {
	font-size: 1.5em;
	cursor: pointer;
	letter-spacing: 0.050em;
}

.post>summary:after {
	display: block;
	font-size: 0.6em;
	margin-top: 2px;
	margin-left: 1.5em;
	letter-spacing: 0.10em;
	color: $click-text;
	content: 'click to expand';
}

.post[open]>summary:after {
	display: none;
}

.post>summary {
	list-style: none;
}

.post[open]>summary {
	margin-bottom: 0.5em;
}

.posted {
	display:block;
	font-weight: lighter;
	font-size: 0.65em;
}

p {
	font-family: "Segoe UI", "Liberation Sans", sans-serif;
	margin-top: 0.5em;
}

footer {
	margin-top: 2em;
	margin-left: 1em;
	margin-right: 1em;
	padding-top: 3px;
	justify-self: center;
	width: 90%;
	max-width: 40em;
	text-align: center;
	border-top: 1px solid $footer-foreground;
}

footer small {
	font-size: 0.75em;
	color: $footer-foreground;
	padding-bottom: 2em;
}

.wp-block-post-featured-image {
	display: none;
}

.not-found {
	margin-top: 2em;
	text-align: center;
	margin-bottom: 2em;
}

img {
	display: block;
}

.tags {
	margin-left: 0.25em;
	position:absolute;
	bottom: 1em;
	left: 100%;
}

.see-also {
	font-size: 80%;
}

.tag-list {
}

.tag {
	list-style: none;
}
